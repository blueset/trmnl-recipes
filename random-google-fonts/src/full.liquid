<div class="layout layout--col gap">
  <div class="grid">
    <div class="item">
      <div class="meta"></div>
      <div class="content">
        <span class="sample-large gFont" dir="auto" lang="{{ metadata.primary_language | replace: "_", "-" }}">{{ metadata.sample_text[0].styles }}</span>
        <!-- <span class="label">USD</span> -->
      </div>
    </div>
  </div>

  <div class="divider"></div>

  <div class="grid" style="height: 0; flex-grow: 1; grid-template-rows: 100%;">
    <div class="item col--span-6" style="height: 100%">
      <div class="meta"></div>
      <div class="content" style="justify-content: center;">
        <span class="gFont sample-small" dir="auto" lang="{{ metadata.primary_language | replace: "_", "-" }}">{{ metadata.sample_text[0].specimen_21 }}</span>
        <!-- <span class="label">Preview</span> -->
      </div>
    </div>

    <div class="col col--span-3 gap flex flex--col flex--center-y" style="height: 100%" data-overflow="true">
      {% render "sidebar", metadata: metadata %}
    </div>
  </div>
</div>

<div class="title_bar">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="image image-stroke"><path fill="currentColor" d="M4 2.8A3.6 3.6 0 1 0 4 10a3.6 3.6 0 0 0 0-7.2m7.6 0v18.4h7.2a5.2 5.2 0 1 1 0-10.4a4 4 0 1 1 0-8zm7.2 0v8a4 4 0 1 0 0-8m0 8v10.4A5.2 5.2 0 0 0 24 16a5.2 5.2 0 0 0-5.2-5.2m-7.7-7.206L0 21.199h8.8l2.3-3.64Z"/></svg>
  <span class="title">{{ metadata.name }}</span>
  <span class="instance">by {{ metadata.designer }}</span>
</div>

<style>
  .sample-large {
    font-size: 72px;
    white-space: nowrap;
    overflow: hidden;
    line-height: normal;
    height: 1lh;
    place-content: center;
    max-width: 100%;
  }
  .sample-small {
    font-size: 36px;
    line-height: normal;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 8;
    overflow: hidden;
    place-content: center;
  }

  .classification {
    text-transform: capitalize;
    margin-inline-start: 0.25em;
  }
</style>
