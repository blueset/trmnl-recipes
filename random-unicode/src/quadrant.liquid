.view--quadrant {
  .character {
    position: relative;
    svg {
      width: 100%;
      overflow: visible;
    }
    span {
      position: absolute !important;
      left: 0;
      bottom: 0;
      transform: translateY(100%);
    }
  }
  .label--small, .description {
    font-family: 'Ari-W9500 Condensed', sans-serif;
    font-size: 11px;
    line-height: 14px;
  }
  .description {
    height: 100%;
  }
  .description p.item {
    margin-block-end: 5px;
    line-height: 12px;
    display: block;
    &:before {
      content: "â†’ ";
    }
    .screen--lg & {
      font-size: 16px;
      line-height: 1.2;
    }
  }
  .description.narrow, .narrow {
    font-family: 'Ari-W9500 Condensed', sans-serif;
    
    .screen--4bit & {
      font-family: 'Nunito Sans', sans-serif;
      font-stretch: 75%;
    }
  }
  .character svg {
    aspect-ratio: 1 / 1;
  }
  .description {
    u, strong {
      font-weight: bold;
      text-decoration: none;
    }
    em {
      text-decoration: underline;
      font-style: normal;
    }
  }
  .characters:has(.character:nth-child(2)) {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px 10px;
  }
  .layout {
    display: grid !important;
    grid-template-columns: 1fr 3fr;
    grid-template-rows: 100%;
    gap: 40px 20px !important;
    align-content: center;
    align-items: center;
  }
  .details {
    max-height: 100%;
  }
  .clamp--4, .clamp--3 {
    word-break: auto-phrase !important; 
  }
  .title_bar .title {
    width: 0;
    flex-grow: 1;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .title_bar .instance {
    flex-grow: 0;
  }
}
