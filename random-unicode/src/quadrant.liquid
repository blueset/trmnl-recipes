{% if error %}
<div class="layout">
  <div class="column flex--center-x text--center">
    <span class="title">Random Unicode: Error</span>
    <p class="title title--small">{{ error | default: "Unknown error occurred." }}</p>
  </div>
</div>
<script>
  window.TRMNL_SKIP_SCREEN_GENERATION = true;
</script>
