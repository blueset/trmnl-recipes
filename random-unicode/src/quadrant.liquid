<div class="layout">
      
  <div class="characters">
    <div class="character">
      {{ svgs[0].svg }}
      <span class="label label--small text-stroke">{{ svgs[0].font }}{% assign svgsSize = svgs | size %}{% if svgsSize > 1 %} (+{{ svgs | size | minus: 1 }}){% endif %}</span>
    </div>
  </div>

  <div class="details">
    <div class="description narrow" data-overflow="true">
      {% for description in descriptions %}
      {% if description.title == "Wikipedia (en)" %}{% continue %}{% endif %}
        {{ description.html | replace: "<p>", '<p class="item">'}}
      {% endfor %}
    </div>
  </div>
</div>

<div class="title_bar">
  <img class="image" src="https://www.svgrepo.com/show/349543/unicode.svg">
  <span class="title">{{ meta.na }}</span>
  <span class="instance">{{ codepoint }}</span>
</div>
