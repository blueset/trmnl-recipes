.view--half_vertical {
  .character {
    position: relative;
    svg {
      width: 100%;
      overflow: visible;
    }
    span {
      position: absolute !important;
      left: 0;
      bottom: 0;
      transform: translateY(100%);
    }
  }
  .descriptions {
    grid-column: 1 / -1;
    display: grid;
    overflow: hidden;
    align-self: start;
    grid-template-columns: auto minmax(200px, 1fr);
    gap: 0px 10px;
    align-items: start;
    max-height: 100%;
    .item {
      display: contents;
    }
    .label {
      text-transform: uppercase;
      font-weight: bold;
    }
    .screen--lg & {
      gap: 10px 20px;
    }
  }
  .label--small, .description {
    font-family: 'Ari-W9500 Condensed', sans-serif;
    font-size: 11px;
    line-height: 14px;

    .screen--4bit & {
      font-family: 'Nunito Sans', sans-serif;
      line-height: 1.5;
    }
    .screen--lg.screen--4bit & {
      font-size: 14px;
    }
  }
  .description.narrow, .narrow {
    font-family: 'Ari-W9500 Condensed', sans-serif;
    
    .screen--4bit & {
      font-family: 'Nunito Sans', sans-serif;
      font-stretch: 75%;
    }
  }
  .character svg {
    aspect-ratio: 1 / 1;
  }
  .description.large {
    font-family: 'MotaPixel', sans-serif;
    font-size: 20px;
    font-weight: 300;
    p {
      line-height: 20px;
    }
    u, strong {
      font-weight: bold;
      text-decoration: none;
    }
    em {
      text-decoration: underline;
      font-style: normal;
    }
    
    .screen--4bit & {
      font-family: 'Nunito Sans', sans-serif;
      p {
        line-height: 1.1;
      }
    }
  }
  .characters {
    grid-column: 2 / span 1;
  }
  .characters:has(.character:nth-child(2)) {
    display: grid;
    gap: 20px 10px;
  }
  .characters:has(.character:nth-child(2):last-child) {
    grid-template-columns: 1fr 1fr;
  }
  .characters:has(.character:nth-child(3):last-child) {
    grid-template-columns: 1fr 1fr 1fr;
  }
  .characters:has(.character:nth-child(4):last-child) {
    grid-template-columns: 1fr 1fr 1fr 1fr;
  }

  .properties {
    gap: 5px;
    grid-column: span 2;
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    .property-group-key {
      font-family: "Ari-W9500", sans-serif;
      font-weight: bold;
      font-size: 11px;
      line-height: 14px;
    }
    .property {
      font-family: "Ari-W9500", sans-serif;
      font-size: 11px;
      line-height: 14px;
      border-radius: 5px;
      border: 1px solid #444;
      display: inline-flex;
      .property-key {
        padding: 2px 4px;
      }
      .property-value {
        background-color: #444;
        color: white;
        padding: 2px 4px;
        border-radius: 0 3px 3px 0;
      }
    }
  }
  .layout {
    display: grid !important;
    grid-template-columns: 3fr 4fr 3fr;
    grid-template-rows: auto 1fr;
    gap: 20px 20px !important;
    align-content: center;
    align-items: center;
    .screen--lg & {
      gap: 40px 20px !important;
    }
  }
  .layout:has(.characters .character:nth-child(3):last-child) {
    grid-template-columns: 2fr 6fr 2fr;
  }
  .layout:has(.characters .character:nth-child(4):last-child) {
    grid-template-columns: 1fr 8fr 1fr;
  }
  .clamp--4, .clamp--3 {
    word-break: auto-phrase !important; 
  }
  .title_bar .title {
    width: 0;
    flex-grow: 1;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .title_bar .instance {
    flex-grow: 0;
  }
}
