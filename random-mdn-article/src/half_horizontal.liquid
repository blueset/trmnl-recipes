<div class="layout">
  <div class="columns">
    <div class="column">
      <div class="richtext richtext--left gap">
        <div class="flex flex--col gap--xsmall flex--left">
          <div class="content content--small">
            {% for parent in parents %}
              {% unless forloop.last %}
                {{ parent.title | escape }} â€º
              {% endunless %}
            {% endfor %}
          </div>
          <span class="title">{{ title | escape }}</span>
        </div>
        <div class="content">
          <p>{{ description | escape }}</p>
        </div>
        {% if baseline and baseline != "" %}
        <div class="divider"></div>
        <div class="content flex flex--row flex--wrap flex--left baseline">
          {% case baseline.baseline %}
            {% when "high" %}
              <svg height="1.25em" class="image image--dither" style="margin-block-end: 3px;" viewBox="0 0 540 300" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M420 30L390 60L480 150L390 240L330 180L300 210L390 300L540 150L420 30Z" fill="#aaa"/>
                <path d="M150 0L30 120L60 150L150 60L210 120L240 90L150 0Z" fill="#aaa"/>
                <path d="M390 0L420 30L150 300L0 150L30 120L150 240L390 0Z" fill="#000"/>
              </svg>
              Baseline Widely available
            {% when "low" %}
              <svg height="1.25em" class="image image--dither" style="margin-block-end: 3px;" viewBox="0 0 540 300" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M150 0L180 30L150 60L120 30L150 0Z" fill="#aaa"/>
                <path d="M210 60L240 90L210 120L180 90L210 60Z" fill="#aaa"/>
                <path d="M450 60L480 90L450 120L420 90L450 60Z" fill="#aaa"/>
                <path d="M510 120L540 150L510 180L480 150L510 120Z" fill="#aaa"/>
                <path d="M450 180L480 210L450 240L420 210L450 180Z" fill="#aaa"/>
                <path d="M390 240L420 270L390 300L360 270L390 240Z" fill="#aaa"/>
                <path d="M330 180L360 210L330 240L300 210L330 180Z" fill="#aaa"/>
                <path d="M90 60L120 90L90 120L60 90L90 60Z" fill="#aaa"/>
                <path d="M390 0L420 30L150 300L0 150L30 120L150 240L390 0Z" fill="#000"/>
              </svg>
              Baseline {{ baseline.baseline_low_date | date: "%Y" }}
              <span class="label label--inverted label--small" style="translate: 0 -2px;"><span style="display: inline-block; translate: 0 0px;">NEWLY AVAILABLE</span></span>
            {% when false %}
              <svg height="1.25em" class="image image--dither" style="margin-block-end: 3px;" viewBox="0 0 540 300" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M150 0L240 90L210 120L120 30L150 0Z" fill="#000"/>
                <path d="M420 30L540 150L420 270L390 240L480 150L390 60L420 30Z" fill="#aaa"/>
                <path d="M330 180L300 210L390 300L420 270L330 180Z" fill="#000"/>
                <path d="M120 30L150 60L60 150L150 240L120 270L0 150L120 30Z" fill="#aaa"/>
                <path d="M390 0L420 30L150 300L120 270L390 0Z" fill="#000"/>
              </svg>
              Limited availability
          {% endcase %}
          <div class="flex flex--row flex--wrap flex--left">
            {% render 'chips', baseline: baseline %}
          </div>
        </div>
        {% endif %}<img class="image image--dither image-stroke" src="https://quickchart.io/qr?text={{ link | url_encode }}&size={{ module | times: 8 }}&margin=0&ecLevel=L" style="position: absolute; bottom: 40px; right: 10px; width: {{ module | times: 2 }}px; height: {{ module | times: 2 }}px;">
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <svg xmlns="http://www.w3.org/2000/svg" class="image-stroke" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="m21.538 1.1l-6.745 21.8h-2.77L18.77 1.1ZM24 1.1v21.8h-2.462V1.1Zm-12 0v21.8H9.538V1.1Zm-2.462 0L2.77 22.9H0L6.746 1.1Z"/></svg>
  <span class="title">mdn_</span>
  <span class="instance">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
