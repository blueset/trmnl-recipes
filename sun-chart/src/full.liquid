<div class="contents" lang="{{ trmnl.user.locale | escape }}" data-t-data="{{ 'sun_chart' | l_word: trmnl.user.locale | json | escape }}">
<div class="flex-col place-content-between gap-0 layout" lang="{{ trmnl.user.locale | escape }}" data-hour-cycle="{{ trmnl.plugin_settings.custom_fields_values.hour_cycle }}" data-tz="{{ trmnl.plugin_settings.custom_fields_values.time_zone }}">
  <div class="relative mx-2 mb-6 -px-2 w-full chart-today-container">
    <div class="flex flex-row place-content-between gap-0 4bit:mb-1 hour-labels">
    </div>
    <div class="flex flex-row gap-0 border rounded w-full h-4 chart-today"></div>
    <div class="inline-block absolute -translate-x-1/2 chart-today-indicator">▲</div>
  </div>
  <div class="flex flex-row w-full grow-2">
    <div class="flex flex-col place-content-center gap-0 grow">
      <div class="inline-block text-center label" data-t="sunrise">Sunrise</div>
      <div class="[&_small]:text-4xl lg:[&_small]:text-6xl lg:text-7xl text-center value value--large sunrise-time">-</div>
    </div>
    <div class="portrait:hidden flex lg:portrait:flex flex-col place-content-center gap-0 grow">
      <div class="inline-block text-center label" data-t="daylength">Daylength</div>
      <div class="[&_small]:text-4xl lg:[&_small]:text-6xl lg:text-7xl text-center value value--large day-length">-</div>
    </div>
    <div class="flex flex-col place-content-center gap-0 grow">
      <div class="inline-block text-center label" data-t="sunset">Sunset</div>
      <div class="[&_small]:text-4xl lg:[&_small]:text-6xl lg:text-7xl text-center value value--large sunset-time">-</div>
    </div>
  </div>
  <div class="relative flex flex-col gap-0 mx-2 -px-2 w-full year-chart-container grow-3">
    <div class="inline-block absolute -translate-x-1/2 year-today-indicator">▼</div>
    <div class="flex flex-row gap-0 mt-6 border rounded w-full year-chart grow"></div>
    <div class="flex flex-row gap-0 4bit:mt-1 month-labels">
    </div>
  </div>
</div>

<div class="title_bar">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="image-stroke"><path fill="#000" d="M12.75 2.75a.75.75 0 0 0-1.5 0v1.5a.75.75 0 0 0 1.5 0zm6.28 2.22a.75.75 0 0 1 0 1.06l-1.06 1.061a.75.75 0 0 1-1.061-1.06l1.06-1.061a.75.75 0 0 1 1.061 0M17.41 13q.09-.487.09-1a5.5 5.5 0 1 0-10.91 1H2.75a.75.75 0 0 0 0 1.5h18.5a.75.75 0 0 0 0-1.5zM12 8a4 4 0 0 1 3.874 5H8.126A4 4 0 0 1 12 8m-6 8.75a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 0 1.5H6.75a.75.75 0 0 1-.75-.75m4 3a.75.75 0 0 1 .75-.75h2.5a.75.75 0 0 1 0 1.5h-2.5a.75.75 0 0 1-.75-.75M4.97 4.97a.75.75 0 0 1 1.06 0l1.061 1.06a.75.75 0 1 1-1.06 1.061L4.97 6.031a.75.75 0 0 1 0-1.061"/></svg>
  <span class="title" data-t="title">Sun chart</span>
  <span class="instance">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
</div>
