<div class="contents" lang="{{ trmnl.user.locale | escape }}" data-t-data="{{ 'sun_chart' | l_word: trmnl.user.locale | json | escape }}">
  <div class="layout flex-col place-content-around" lang="{{ trmnl.user.locale }}" data-hour-cycle="{{ trmnl.plugin_settings.custom_fields_values.hour_cycle }}" data-tz="{{ trmnl.plugin_settings.custom_fields_values.time_zone }}">
  <div class="chart-today-container w-full mx-2 -px-2 relative">
    <div class="hour-labels flex flex-row gap-0 place-content-between screen-4bit:mb-1">
    </div>
    <div class="chart-today w-full gap-0 h-4 rounded flex flex-row border"></div>
    <div class="chart-today-indicator inline-block -translate-x-1/2 absolute">â–²</div>
  </div>
  <div class="flex flex-row w-full">
    <div class="grow flex flex-col place-content-center gap-0">
      <div class="label text-center inline-block" data-t="sunrise">Sunrise</div>
      <div class="value value--large screen-lg:text-7xl text-center [&_small]:text-4xl screen-lg:[&_small]:text-6xl sunrise-time"></div>
    </div>
    <div class="grow flex flex-col place-content-center gap-0">
      <div class="label text-center inline-block" data-t="daylength">Daylength</div>
      <div class="value value--large screen-lg:text-7xl text-center [&_small]:text-4xl screen-lg:[&_small]:text-6xl day-length">-</div>
    </div>
    <div class="grow flex flex-col place-content-center gap-0">
      <div class="label text-center inline-block" data-t="sunset">Sunset</div>
      <div class="value value--large screen-lg:text-7xl text-center [&_small]:text-4xl screen-lg:[&_small]:text-6xl sunset-time"></div>
    </div>
  </div>
</div>

